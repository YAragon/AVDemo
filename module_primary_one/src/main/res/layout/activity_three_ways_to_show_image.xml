<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_direct_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#eeffff"
            android:gravity="center"
            android:text="ImageView绘制"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/iv_surfaceview_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#eeddff"
            android:gravity="center"
            android:text="SurfaceView 绘制"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/iv_custom_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#eeeeff"
            android:gravity="center"
            android:text="自定义View绘制"
            android:textColor="#333333" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/image_content_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>